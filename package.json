{
  "name": "activate-macos",
  "version": "1.0.1",
  "description": "The \"Activate Windows\" watermark ported to MacOS with Electron",
  "main": "app/index.js",
  "scripts": {
    "start": "electron app",
    "build": "npx electron-builder build --macos"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "ru.alexstrnik.activate-macos",
    "files": [
      "package.json",
      "app/**/*"
    ],
    "mac": {
      "identity": null,
      "target": "dmg",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true
    },
    "dmg": {
      "sign": false
    }
  }
}
