{
  "name": "activate-macos",
  "version": "1.0.4",
  "description": "The \"Activate Windows\" watermark ported to MacOS with Electron",
  "main": "app/index.js",
  "scripts": {
    "start": "electron app",
    "postinstall": "electron-rebuild && electron-builder install-app-deps",
    "build": "electron-builder build --macos"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^18.3.3",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "prebuild-install": "^7.1.0"
  },
  "build": {
    "appId": "ru.alexstrnik.activate-macos",
    "files": [
      "package.json",
      "app/**/*",
      "node_modules"
    ],
    "mac": {
      "identity": null,
      "target": "dmg",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true
    },
    "dmg": {
      "sign": false
    }
  },
  "dependencies": {
    "ejs-electron": "^2.1.1",
    "robotjs": "^0.6.0"
  }
}
